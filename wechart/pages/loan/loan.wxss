/* pages/loan/loan.wxss */
.filterBox{ background-color: #fff; display: flex; justify-content: space-between; align-items: center; padding: 20rpx 0 0; margin-bottom: 20rpx;}
.wrap{ width: 100%;}
.tabBox{ display: flex; justify-content: flex-start; align-items: center; font-size: 24rpx; color: #333; overflow-x: scroll;}
.tabBox view{ margin-right: 20rpx; white-space: nowrap; padding: 0 20rpx 20rpx; border-bottom: 4rpx solid transparent;}
.tabBox view.now{ color: #e9c639; border-color: #e9c639;}

.region{ display: flex; justify-content: space-between; flex-wrap: wrap; align-items: center; width: 100%; margin-bottom: 20rpx;}
.region navigator{ width: 100%; position: relative; border-right: 1rpx solid #ccc; box-sizing: border-box; margin-bottom: 20rpx;}
.region navigator view{ position: absolute; font-size: 24rpx; width: 100%; height: 50rpx; line-height: 50rpx; color: #fff; background-color: rgba(0,0,0,.5); left: 0; bottom: 0; text-align: center;}
.region navigator image{ width: 100%;}